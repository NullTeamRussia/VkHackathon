<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoAction">
    <item name="android:windowBackground">@drawable/splash</item>
  </style>

  <style name="MyCardView." parent="Theme.AppCompat.Light">
    <item name="cardCornerRadius">2dp</item>
    <item name="cardElevation">2dp</item>
    <item name="contentPaddingBottom">24dp</item>
    <item name="contentPaddingTop">24dp</item>
    <item name="contentPaddingLeft">16dp</item>
    <item name="contentPaddingRight">16dp</item>
    <item name="cardBackgroundColor">#FFF</item>
  </style>

  <style name="BottomNavigation">
    <item name="android:background">@color/colorPrimary</item>
    <item name="itemBackground">@drawable/custom_background</item>
    <item name="itemIconTint">@color/colorAccent</item>
    <item name="itemTextColor">@color/colorAccent</item>
    <item name="paddingStart">5dp</item>
    <item name="paddingEnd">5dp</item>
  </style>
</resources>
